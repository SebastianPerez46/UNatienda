<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.unatienda.AdminOrderManagementController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label styleClass="label-header" text="Cola de Pedidos Pendientes" />
            
            <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
              <items>
                <AnchorPane>
                     <children>
                        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label styleClass="label-subheader vip-label" text="Pedidos VIP" />
                              <ListView fx:id="vipListView" styleClass="list-view vip-list" VBox.vgrow="ALWAYS" />
                           </children>
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
                <AnchorPane>
                     <children>
                        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label styleClass="label-subheader normal-label" text="Pedidos Normales" />
                              <ListView fx:id="normalListView" styleClass="list-view normal-list" VBox.vgrow="ALWAYS" />
                           </children>
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
            
            <Button fx:id="processOrderButton" onAction="#handleProcessOrder" prefWidth="300.0" text="Procesar Siguiente Pedido">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="statusLabel" styleClass="label-text" text="" /> 
         </children>
      </VBox>
   </children>
</AnchorPane>
