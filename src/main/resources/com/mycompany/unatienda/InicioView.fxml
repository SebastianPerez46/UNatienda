<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane fx:controller="com.mycompany.unatienda.InicioController"
           xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
           prefHeight="600.0" prefWidth="800.0">



    <VBox styleClass="glass-pane" alignment="CENTER" spacing="20"
          maxWidth="400" maxHeight="400">
        
        <padding>
            <Insets top="30" right="30" bottom="30" left="30" />
        </padding>

        <Label text="Bienvenido a UNatienda" styleClass="label-header" />
        
        <Label text="Selecciona tu rol para continuar" 
               style="-fx-font-size: 16px; -fx-text-fill: #cccccc;"/>
        
        <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">

            <Button fx:id="adminButton" text="Administrador" 
                    onAction="#handleAdminClick" 
                    styleClass="glass-button" 
                    opacity="0.0" translateY="50"
                    maxWidth="Infinity"/>


            <Button fx:id="clientButton" text="Cliente" 
                    onAction="#handleClientClick" 
                    styleClass="glass-button" 
                    opacity="0.0" translateY="50"
                    maxWidth="Infinity"/>
        </VBox>
        
        <Button fx:id="exitButton" text="Salir" 
                onAction="#handleExitClick" 
                styleClass="glass-button"
                style="-fx-border-color: #888888;" 
                opacity="0.0" translateY="50"
                maxWidth="Infinity"/>

    </VBox>
</StackPane>
